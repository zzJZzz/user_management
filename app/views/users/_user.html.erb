<div id="<%= dom_id user %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">First name:</strong>
    <%= user.first_name %>
  </p>
  <p class="my-5">
    <strong class="block mb-1 font-medium">Last name:</strong>
    <%= user.last_name %>
  </p>
  <p class="my-5">
    <strong class="block mb-1 font-medium">Email:</strong>
    <%= user.email %>
  </p>
  <p class="my-5">
    <strong class="block mb-1 font-medium">Phone:</strong>
    <%= user.phone %>
  </p>
  <p class="my-5">
    <strong class="block mb-1 font-medium">Height:</strong>
    <%= user.height %>
  </p>
  <p class="my-5">
    <strong class="block mb-1 font-medium">Weight:</strong>
    <%= user.weight %>
  </p>
  <% if action_name != "show" %>
    <%= link_to 'Edit this user', edit_user_path(user), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
